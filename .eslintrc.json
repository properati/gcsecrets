{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "standard",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-extra-semi": "off",
		"comma-dangle": "off",
		"semi": "off",
		"indent": ["warn", "tab"],
		"no-tabs": "off",
		"no-var": "error"
	}
}